# AI Provider Configuration
# Choose one provider: openai, ollama, or huggingface
LLM_PROVIDER=huggingface

# OpenAI Configuration (optional)
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_MODEL=gpt-4

# Hugging Face Configuration (free)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_token_here
HUGGINGFACE_STORY_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_SUMMARY_MODEL=microsoft/DialoGPT-medium

# Ollama Configuration (local, free)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_STORY_MODEL=mistral
# OLLAMA_SUMMARY_MODEL=mistral

# TTS Configuration
USE_GTTS=true
EDGE_TTS_ENABLED=true

# ElevenLabs (optional, paid)
# ELEVENLABS_API_KEY=your-elevenlabs-key
# ELEVENLABS_VOICE_ID=voice-id

# Database
DATABASE_URL=sqlite:///./storiaai.db
DATABASE_ECHO=false

# Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
# SENTRY_DSN=https://your-sentry-dsn-here

# App Settings
MAX_FREE_STORIES_PER_DAY=3
ALLOW_PREMIUM_OVERRIDE=true
OFFLINE_MODE=false
